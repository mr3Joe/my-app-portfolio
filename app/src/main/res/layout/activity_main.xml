<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff"
    android:focusable="true">

    <EditText style="@style/Buttons"
        android:id="@+id/headlineText"
        android:text="My Nanodegree Apps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:typeface="monospace" />

    <Button style="@style/Buttons"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifySteamer"
        android:layout_below="@+id/headlineText"
        android:layout_alignParentStart="true"
        android:onClick="sendToast" />

    <Button style="@style/Buttons"
        android:text="SCORES APP"
        android:id="@+id/scoresApp"
        android:layout_below="@+id/spotifySteamer"
        android:layout_alignParentLeft="true"
        android:onClick="sendToast" />

    <Button style="@style/Buttons"
        android:text="LIBRARY APP"
        android:id="@+id/libraryApp"
        android:layout_below="@+id/scoresApp"
        android:layout_alignParentLeft="true"
        android:onClick="sendToast" />

    <Button style="@style/Buttons"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildBigger"
        android:layout_below="@+id/libraryApp"
        android:layout_alignParentLeft="true"
        android:onClick="sendToast" />

    <Button style="@style/Buttons"
        android:text="XYZ READER"
        android:id="@+id/baconReader"
        android:layout_below="@+id/buildBigger"
        android:layout_alignParentLeft="true"
        android:onClick="sendToast" />

    <Button style="@style/Buttons"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstone"
        android:layout_below="@+id/baconReader"
        android:layout_alignParentLeft="true"
        android:background="#ff0000"
        android:onClick="sendToast" />

</RelativeLayout>
